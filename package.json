{
  "private": true,
  "repository": "https://github.com/chriskrycho/ember-simple-track-helper",
  "license": "MIT",
  "author": {
    "name": "Chris Krycho",
    "email": "hello@chriskrycho.com",
    "url": "https://v5.chriskrycho.com/"
  },
  "scripts": {
    "lint": "pnpm run -r lint",
    "lint:fix": "pnpm run -r lint:fix",
    "prepare": "pnpm run --filter=ember-simple-track-helper build",
    "release": "release-it",
    "start:test-app": "pnpm --filter test-app start",
    "test": "pnpm --filter test-app test",
    "test:ember": "pnpm --filter test-app test:ember"
  },
  "devDependencies": {
    "@glint/core": "^1.4.0",
    "@release-it-plugins/lerna-changelog": "^7.0.0",
    "@release-it-plugins/workspaces": "^4.2.0",
    "prettier-plugin-ember-template-tag": "^2.0.2",
    "release-it": "^17.6.0"
  },
  "volta": {
    "node": "18.20.4",
    "pnpm": "9.7.1"
  },
  "packageManager": "pnpm@9.7.1",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "^7.0.0"
    }
  },
  "release-it": {
    "hooks": {
      "after:bump": "pnpm install",
      "before:init": "cp README.md LICENSE.md ember-simple-track-helper/"
    },
    "plugins": {
      "@release-it-plugins/lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": false
      },
      "@release-it-plugins/workspaces": {
        "workspaces": [
          "ember-simple-track-helper"
        ],
        "additionalManifests": {
          "dependencyUpdates": [
            "test-app/package.json"
          ],
          "versionUpdates": [
            "package.json",
            "test-app/package.json"
          ]
        }
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "version": "2.1.0"
}
